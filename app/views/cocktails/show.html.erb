<div class="wrapper">
  <div class="container container-show">
    <div class="card-show">
      <div class="card-cocktail-show">
        <h2><%= @cocktail.name %></h2>
        <br>
        <ul class='dose-list'>
          <% @cocktail.doses.each do |dose| %>
          <li>
            <%= "#{dose.ingredient.name} #{dose.description}" %> <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
          </li>
          <% end %>
        </ul>
        <br>
      </div>
      <div class="dose-control">
        <div class="dose-controlbis">
          <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
        </div>
        <div class="dose-controlbis">
        <%= link_to 'Delete cocktail', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure' } %>
        </div>
      </div>
    </div>
  </div>
</div>
