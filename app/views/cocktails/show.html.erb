<div class="container">
  <h2><%= @cocktail.name %></h2>
  <br>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= "#{dose.ingredient.name} #{dose.description}" %> <%= link_to 'Delete a dose', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} %>
    </li>
    <% end %>
  </ul>
  <br>
  <div class="dose-control">
    <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
  </div>
  <%= link_to 'Delete cocktail', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure' } %>
</div>
