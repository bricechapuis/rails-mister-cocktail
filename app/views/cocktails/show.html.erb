<div class="wrapper wrapper-show">
  <div class="container container-show">
    <div class="card-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo, height: 300, width: 500, crop: :fill %>'">
      <div class="card-cocktail-show">
        <h2><%= @cocktail.name %></h2>
      </div>
    </div>
    <div class="dose-show">
        <ul class='dose-list'>
          <% @cocktail.doses.each do |dose| %>
          <li>
            <%= "#{dose.ingredient.name} : #{dose.description}" %> <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
          </li>
          <% end %>
          <li><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></li>
        </ul>
    </div>
  </div>
  <div class="description-show">
    <div class="dose-control">
      <div class="dose-controlbis">
      <%= link_to 'Edit cocktail', edit_cocktail_path(@cocktail) %>
      </div>
      <div class="dose-controlbis">
      <%= link_to 'Delete cocktail', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure' } %>
      </div>
    </div>
    <p><%= @cocktail.description %></p>
  </div>
</div>
