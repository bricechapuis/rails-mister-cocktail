<div class="wrapper">
  <div class="container">
    <h3>Cocktails List</h3>
    <div class="cocktail-list">
      <div class="row">
        <ul>
          <% @cocktails.each do |cocktail| %>
          <div class="col-xs-3">
            <div class="card">
              <div class="card-name">
                <%= link_to "#{cocktail.name}", cocktail_path(cocktail) %>
              </div>
              <div class="card-info">
              </div>
            </div>
          </div>
          <% end %>
      </div>
      </ul>
    </div>
  </div>
</div>
